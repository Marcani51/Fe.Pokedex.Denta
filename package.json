{
  "name": "fe-pokedex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p build-only",
    "build:prod": "run-p build-only:prod",
    "build-only": "vite build --mode development",
    "build-only:prod": "vite build --mode production",
    "preview": "vite preview",
    "ci:deploy": "docker build -t ghcr.io/pokedexdenta --build-arg NODE_ENV=development .",
    "ci:depliy:pre-prod": "docker build -t ghcr.io/pokedexdenta:pre-prod --build-arg NODE_ENV=development .",
    "ci:deploy:prod": "docker build -t ghcr.io/pokedexdenta:pre-prod --build-arg NODE_ENV=production ."
  },
  "dependencies": {
    "axios": "^1.11.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vue-tsc": "^3.0.5"
  }
}
